<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bma.studycollabs.ChangePassword">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/banner">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_login_show"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Change Password"
                    android:textSize="20dp"
                    android:textColor="#ffffff"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_old_pass"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/box"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/input_old_pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:background="#00000000"
                        android:layout_gravity="center"
                        android:padding="6dp"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp"
                        android:textColorHint="@android:color/black"
                        android:hint="Old password" />


                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_newpass"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/box"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/input_newpass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:background="#00000000"
                        android:layout_gravity="center"
                        android:padding="6dp"
                        android:textSize="15dp"
                        android:textColor="#000000"
                        android:layout_marginBottom="3dp"
                        android:textColorHint="@android:color/black"
                        android:hint="New password" />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_conpass"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/box"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/input_conpass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:background="#00000000"
                        android:layout_gravity="center"
                        android:padding="6dp"
                        android:textSize="15dp"
                        android:textColor="#000000"
                        android:layout_marginBottom="3dp"
                        android:textColorHint="@android:color/black"
                        android:hint="Confirm password" />


                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_updatepass"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/boxbtnblue"
                android:text="Update password"/>



        </LinearLayout>

    </ScrollView>

</LinearLayout>
